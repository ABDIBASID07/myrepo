<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree export_xlsx="0">
                <field name="name" string="Patient Name"/>
                <field name="ref"/>
                <field name="date_of_birth"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>

                <!--                <field name="total_amount" readonly="1"/>-->

                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>


    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">

            <form>
                <header>

                    <button name="compute_bill" string="Compute Bill" type="object" class="oe_highlight"/>

                </header>
                <sheet>

                    <field name="image" widget="image" class="oe_avatar"/>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date_of_birth" />
                            <field name="age" />
                            <field name="appointment_id"/>
                             <field name="appointment_count"/>


                            <!--                            <field name="total_amount" readonly="1"/>-->

                        </group>
                        <group>

                            <field name="ref"/>
                            <field name="gender" invisible="context.get('hide_gender')"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>

                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="prescription" name="Prescription">

                            <field name="prescription" placeholder="Enter your Prescriptions"
                                   options="{'collaborative':true, 'resizable':true, 'codeview':true}"/>

                        </page>

                        <page string="pharmacy" name="pharmacy">
                            <field name="medicine_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="price_unit"/>
                                    <field name="qty"/>
                                    <field name="sub_total" sum="Total" string="Sub total"/>

                                </tree>

                                <form>
                                    <field name="product_id"/>
                                    <field name="price_unit"/>
                                    <field name="qty"/>
                                    <field name="sub_total" sum="Total" string="Sub total"/>

                                </form>
                            </field>


                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                    <field name="total_amount" readonly="1"/>

                </div>

            </form>
        </field>
    </record>

    <record id="view_hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="['|',  ('name','ilike',self), ('ref','ilike',self)]"/>
                <field name="age"/>
                <field name="ref"/>
                <field name="gender"/>
                <filter name="filter_male" string="Male" domain="[('gender','=','male')]"/>
                <filter name="filter_female" string="Female" domain="[('gender','=','female')]"/>
                <!--                <separator/>-->
                <!--                <filter name="filter_kid" string="Kid" domain="[('age','&lt;=',5)]"/>-->
                <!--                                <separator/>-->
                <filter name="filter_archive" string="Archived" domain="[('active','=',False)]"/>

                <group expand="0" string="Group By">
                    <filter string="Gender" name="group_by_gender" context="{'group_by': 'gender'}"/>

                </group>
                <searchpanel>
                    <field name="gender" select="multi" icon="fa-users" enable_counters="1"/>
                </searchpanel>
            </search>

        </field>
    </record>
    <record id="hospital_patients_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_male':1,'search_default_group_by_gender':1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                you can enter patient info here...
            </p>
        </field>
    </record>


    <menuitem
            id="menu_patient"
            name="Patient"
            parent="menu_patient_master"
            sequence="0"
            action="hospital_patients_action"
    />


</odoo>