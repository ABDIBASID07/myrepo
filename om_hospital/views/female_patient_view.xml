<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


    <record id="hospital_female_patients_action" model="ir.actions.act_window">
        <field name="name">Female Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_gender':'female', 'hide_gender':1}</field>
        <field name="domain">[( 'gender', '=','female')]</field>

        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                you can enter female patients info here...
            </p>
        </field>
    </record>

    <menuitem
            id="menu_female_patients"
            name="Female Patients"
            parent="menu_patient_master"
            sequence="20"
            action="hospital_female_patients_action"
    />


</odoo>