<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


    <record id="view_cancel_appointment_form" model="ir.ui.view">
        <field name="name">cancel.appointment.wizard.form</field>
        <field name="model">cancel.appointment.wizard</field>
        <field name="arch" type="xml">

            <form>
                <group>
                    <group>
                        <field name="appointment_id" invisible="context.get('hide_appointment')" domain="[('state', '=', 'draft')]"/>

                         <field name="reason"/>
                    </group>
                    <group>
                        <field name="date_cancel"/>
                    </group>
                </group>
                <footer>
                    <button name="cancel_action" string="Cancel Appointment" type="object" class="btn-primary"
                            data-hotkey="q"/>

                    <button  data-hotkey="z" string="Discard" special="cancel"  class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="cancel_appointment_wizard" model="ir.actions.act_window">
        <field name="name">Cancel Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cancel.appointment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>


    </record>


</odoo>